extends layout 

block content 
    h1= title 
    form(method='POST' action='')
        div.form-group
            label(for='name') Name: 
            input#name.form-control(type='text',
            placeholder="Author's name", name='name',
            value=(undefined===author ? '': author.name))

            label(for='date_of_birth') Date of Birth: 
            input#name.form-control(type='date', name='date_of_birth',
            value=(undefined===author ? '': author.date_of_birth))

            label(for='date_of_death') Date of Birth: 
            input#name.form-control(type='date', name='date_of_death',
            value=(undefined===author ? '': author.date_of_birth))


        button.btn.btn-primary(type='submit') Submit
    
    if errors 
        ul 
            for error in errors 
                li!= error.msg