extends layout

block content
  h1 #{title}: #{bookinstance._id}
  p #[strong Title:] 
    a(href=book.url) #{book.title}
  p #[strong Imprint:] #{bookinstance.imprint}
  p #[strong Status:] #{bookinstance.status}

  p #[strong Do you really want to delete this Book Instance?]

  form(method='POST' action='')
    div.form-group
      input#bookinstanceid.form-control(type='hidden',name='bookinstanceid', 
      required='true', value=bookinstance._id )

    button.btn.btn-primary(type='submit') Delete
